<div class="tought-form-container">
    <a href="/toughts/dashboard">Voltar para o Dashboard</a>
    <h1>Edite seu pensamento</h1>
    <form action="/toughts/edit" method="POST">
        <input type="hidden" name="id" value="{{tought.id}}">
        <div class="form-control">
            <label for="title">Pensamento</label>
            <input type="text" name="title" placeholder="Insira seu pensamento..." value="{{tought.title}}">
        </div>
        <input type="submit" value="Salvar pensamento" class="btn">
</div>